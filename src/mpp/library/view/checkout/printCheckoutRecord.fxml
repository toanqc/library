<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/common.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mpp.library.controller.PrintCheckoutRecordController">
  <!-- TODO Add Nodes -->
  <children>
    <GridPane hgap="15.0" prefHeight="580.0" prefWidth="800.0" vgap="15.0">
      <children>
        <TextField fx:id="txtMemberID" onAction="#onEnter" prefHeight="30.0" prefWidth="579.0" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button fx:id="btnSearch" alignment="CENTER_RIGHT" blendMode="SRC_OVER" mnemonicParsing="false" onMouseClicked="#search" prefHeight="27.0" prefWidth="100.0" text="Search" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnHome" alignment="CENTER_RIGHT" mnemonicParsing="false" onMouseClicked="#gotoMainScreen" prefHeight="27.0" prefWidth="85.0" text="Home" />
        <Button fx:id="btnCheckout" alignment="CENTER_RIGHT" defaultButton="true" mnemonicParsing="false" onMouseClicked="#printCheckoutRecord" prefHeight="25.0" prefWidth="180.0" text="Print Checkout Record" GridPane.columnIndex="1" />
          <ScrollPane hbarPolicy="NEVER" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <content>
              <TableView fx:id="tableView" prefHeight="450.0" prefWidth="780.0">
                <columns>
                  <TableColumn fx:id="ISBNTC" maxWidth="5000.0" minWidth="10.0" prefWidth="170.0" text="ISBN/Issue No" />
                  <TableColumn fx:id="titleTC" maxWidth="5000.0" minWidth="10.0" prefWidth="257.0" text="Title" />
                  <TableColumn fx:id="typeTC" maxWidth="5000.0" minWidth="10.0" prefWidth="100.0" text="Type" />
                  <TableColumn fx:id="chkoutDateTC" maxWidth="5000.0" minWidth="10.0" prefWidth="150.0" text="Checkout Date" />
                  <TableColumn fx:id="dueDateTC" maxWidth="5000.0" minWidth="10.0" prefWidth="100.0" text="Due Date" />
                </columns>
              </TableView>
            </content>
          </ScrollPane>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icon/home.png" />
               </image>
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </ImageView>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <image>
                  <Image url="@../icon/search.png" />
               </image>
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </ImageView>
            <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
               <image>
                  <Image url="@../icon/print.png" />
               </image>
               <GridPane.margin>
                  <Insets left="15.0" />
               </GridPane.margin>
            </ImageView>
      </children>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
      </columnConstraints>
      <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <rowConstraints>
            <RowConstraints minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="1.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="485.0" vgrow="SOMETIMES" />
      </rowConstraints>
    </GridPane>
  </children>
</AnchorPane>
